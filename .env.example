# Variables de entorno para desarrollo local
# Copiar a .env y configurar valores reales

# Base de datos compartida
DATABASE_URL=postgresql://username:password@localhost:5432/clip_comparador_v2
REDIS_URL=redis://localhost:6379

# Backend Admin (Flask)
FLASK_SECRET_KEY=your_super_secret_key_here_change_in_production
JWT_SECRET_KEY=your_jwt_secret_key_here_change_in_production
FLASK_ENV=development
FLASK_DEBUG=True

# Cloudinary Storage
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Flask App Configuration
API_TITLE=CLIP Comparador V2
API_VERSION=2.0.0
LOG_LEVEL=INFO
CORS_ORIGINS=*
MAX_UPLOAD_SIZE=10485760
ENABLE_REDIS_CACHE=true
REDIS_TTL=3600

# CLIP Model Optimization (Railway RAM optimization)
CLIP_PRELOAD=false                    # false=lazy loading (ahorra ~500MB RAM), auto=preload en producci√≥n, true=siempre precarga
CLIP_IDLE_TIMEOUT=1800                # REQUERIDO: Segundos antes de liberar CLIP (1800=30min recomendado, recarga toma ~60s)

# Desarrollo
DEBUG=True
TESTING=False

# Railway Production (no incluir en .env local)
# RAILWAY_ENVIRONMENT=production
# RAILWAY_GIT_COMMIT_SHA=auto
# RAILWAY_PROJECT_ID=auto
# RAILWAY_SERVICE_ID=auto
