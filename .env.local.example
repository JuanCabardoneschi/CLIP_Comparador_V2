# Archivo de configuración para desarrollo local
# NO SUBIR A GIT - Agregado a .gitignore

# ============================================
# BASE DE DATOS LOCAL (PostgreSQL)
# ============================================
DATABASE_URL=postgresql://postgres:TU_PASSWORD_AQUI@localhost:5432/clip_comparador_v2

# ============================================
# FLASK CONFIGURATION
# ============================================
SECRET_KEY=dev-secret-key-local-change-this
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_APP=clip_admin_backend/app.py

# ============================================
# CLOUDINARY (usar las mismas de producción)
# ============================================
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# ============================================
# REDIS (opcional para desarrollo local)
# ============================================
# Si tienes Redis instalado localmente:
# REDIS_URL=redis://localhost:6379/0
# Si no, comentar o dejar vacío (usará cache en memoria)
REDIS_URL=

# ============================================
# CLIP SEARCH API (para pruebas locales)
# ============================================
CLIP_API_URL=http://localhost:8000

# ============================================
# CONFIGURACIÓN DE DESARROLLO
# ============================================
DEBUG=True
TESTING=True
LOG_LEVEL=DEBUG
